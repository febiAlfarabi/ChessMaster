<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="android:Theme.Light">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <item name="android:windowNoTitle">true</item>
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
    </style>
    
    <style name="vsOptionRadioGroupLeft">
        <item name="android:width">90dp</item>
        <item name="android:height">20dp</item>
        <item name="android:text">Vs Com</item>
        <item name="android:textSize">12sp</item>
    </style>
    <style name="vsOptionRadioGroupRight">
        <item name="android:width">90dp</item>
        <item name="android:height">20dp</item>
        <item name="android:text">Vs Player</item>
        <item name="android:textSize">12sp</item>
    </style>
    
    <style name="colorOptionRadioGroupLeft">
        <item name="android:width">90dp</item>
        <item name="android:height">20dp</item>
        <item name="android:text">White</item>
        <item name="android:textSize">12sp</item>
    </style>
    <style name="colorOptionRadioGroupRight">
        <item name="android:width">90dp</item>
        <item name="android:height">20dp</item>
        <item name="android:text">Black</item>
        <item name="android:textSize">12sp</item>
    </style>
    <style name="c_style_radio_button" parent="@android:style/Widget.CompoundButton.RadioButton">
        <!-- <item name="android:button">@drawable/c_bg_radio_button</item>
         -->
    </style>
</resources>
